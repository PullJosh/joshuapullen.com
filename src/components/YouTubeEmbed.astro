---
const {
  videoId,
  autoplay = false,
  loop = false,
  aspectRatio = "16 / 9",
} = Astro.props;
const videoUrl = `https://www.youtube.com/embed/${videoId}?autoplay=${autoplay ? 1 : 0}&loop=${loop ? 1 : 0}${loop ? `&playlist=${videoId}` : ""}`;
---

<iframe
  src={videoUrl}
  class="w-full rounded-lg"
  style={{ aspectRatio }}
  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
  allowfullscreen
>
</iframe>
